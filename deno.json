{
  "tasks": {
    "start:main": "IS_PROD=1 deno run --unstable-ffi --allow-ffi --unstable-kv --allow-env --allow-read --allow-write --allow-net --unstable-cron --env ./src/main.jsx",
    "start:tailwind": "IS_PROD=1 deno run -A npm:tailwindcss -- -i ./assets/style.css -o ./assets/tailwind.css --minify",
    "start": "deno task start:tailwind && deno task start:main",

    "dev:main": "deno run --unstable-ffi --allow-ffi --unstable-kv --allow-env --allow-read --allow-write --allow-net --unstable-cron --env --watch ./src/main.jsx",
    "dev:tailwind": "deno run -A npm:tailwindcss -- -i ./assets/style.css -o ./assets/tailwind.css --watch --minify",
    "dev": "deno task dev:tailwind & deno task dev:main"
  },
  "imports": {
    "zod": "https://deno.land/x/zod@v3.16.1/mod.ts",
    "sqlite": "jsr:@db/sqlite@^0.11.1",
    "hono": "jsr:@hono/hono@^4.5.1"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx",
    "checkJs": true,
    "noImplicitAny": false
  }
}
