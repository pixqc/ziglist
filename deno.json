{
  "tasks": {
    "start": "IS_PROD=1 deno run --allow-ffi --allow-env --allow-read --allow-write --allow-net --env ./src/main.jsx",

    "dev:main": "deno run --allow-ffi --allow-env --allow-read --allow-write --allow-net --env --watch ./src/main.jsx",
    "dev:tailwind": "deno run -A npm:tailwindcss -- -i ./assets/style.css -o ./assets/tailwind.css --minify",
    "dev:restore": "deno run --allow-read --allow-write --allow-env --allow-net ./src/restore.js",
    "dev:init": "deno task dev:tailwind && deno task dev:restore",
    "dev": "deno task dev:tailwind -- --watch & deno task dev:main"
  },
  "unstable": ["ffi", "kv", "cron"],
  "imports": {
    "s3": "jsr:@bradenmacdonald/s3-lite-client@^0.7.6",
    "@std/dotenv/load": "jsr:@std/dotenv/load",
    "@std/fs": "jsr:@std/fs",
    "hono": "jsr:@hono/hono@^4.5.1",
    "sqlite": "jsr:@db/sqlite@^0.11.1",
    "zod": "https://deno.land/x/zod@v3.16.1/mod.ts"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx",
    "checkJs": true,
    "noImplicitAny": false
  }
}
