{
  "name": "ziglist",
  "module": "src/main.jsx",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "start": "IS_PROD=1 bun run src/server.jsx 2>&1 | tee log.txt",
    "dev:main": "bun run --watch src/server.jsx 2>&1 | tee log.txt",
    "dev:tailwind": "bunx tailwindcss -i ./assets/style.css -o ./assets/tailwind.css --minify",
    "dev:clean": "rm db.sqlite db.sqlite-shm db.sqlite-wal",
    "dev:init": "bun run dev:tailwind && bun run dev:restore",
    "dev": "bun run dev:tailwind && bun run dev:main"
  },
  "type": "module",
  "dependencies": {
    "hono": "^4.5.8"
  }
}
